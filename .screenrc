escape ^Zz
shelltitle "$ |bash"

altscreen on
autodetach on
crlf off
encoding UTF-8
flow off
ignorecase on
scrollback 8192
startup_message off
term screen-256color
utf8 on
vbell off

hardstatus on
hardstatus lastline '%{.M}%H%{-} %{.w}(%l)%{-} %= %-w%{.C}[%n %t*]%{-}%+w %= %{.G}[%02c:%s]%{-} %{.Y}(%Y-%m-%d)%{-}'
caption splitonly '%?%F%{.c}%:%{-}%?%n %t%'

screen 3
screen 2
screen 1
screen 0
